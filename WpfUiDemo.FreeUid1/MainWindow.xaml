<Window x:Class="WpfUiDemo.FreeUid1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfUiDemo.FreeUid1"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="600"
        Width="1024"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style x:Key="DefaultRadioStyle"
               TargetType="RadioButton">
            <Setter Property="Background"
                    Value="Transparent" />
            <Setter Property="BorderThickness"
                    Value="0" />
            <Setter Property="FocusVisualStyle"
                    Value="{x:Null}" />
            <Setter Property="VerticalContentAlignment"
                    Value="Center" />
            <Setter Property="HorizontalContentAlignment"
                    Value="Center" />
            <Setter Property="Foreground"
                    Value="Gray" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Grid>
                            <Border x:Name="RadioBorder"
                                    Margin="10,0" />
                            <!--内容呈现-->
                            <ContentPresenter x:Name="contentPresenter"
                                              Focusable="False"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              Margin="{TemplateBinding Padding}"
                                              RecognizesAccessKey="True"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked"
                                     Value="True">
                                <Setter Property="Foreground"
                                        Value="Cyan" />
                                <Setter Property="BorderBrush"
                                        Value="Cyan"
                                        TargetName="RadioBorder" />
                                <Setter Property="BorderThickness"
                                        Value="0,0,0,2"
                                        TargetName="RadioBorder" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="4*" />
            </Grid.ColumnDefinitions>
            <!--Logo-->
            <StackPanel Orientation="Horizontal">
                <Border CornerRadius="30"
                        Width="30"
                        Height="30"
                        Background="Cyan"
                        Margin="10,0,0,0" />
                <Border CornerRadius="30"
                        Width="30"
                        Height="30"
                        Background="Orange"
                        Margin="-8,0,0,0" />
                <TextBlock Text="HYPERS"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="DimGray"
                           VerticalAlignment="Center"
                           Margin="5,0" />
            </StackPanel>
            <!--Menus-->
            <UniformGrid Grid.Column="1"
                         Columns="5">
                <RadioButton Style="{StaticResource DefaultRadioStyle}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xe620;"
                                   FontSize="25"
                                   FontFamily="/#iconfont"
                                   VerticalAlignment="Center" />
                        <TextBlock Text="Dashboard"
                                   VerticalAlignment="Center"
                                   Margin="5,0" />
                    </StackPanel>
                </RadioButton>
                <RadioButton Style="{StaticResource DefaultRadioStyle}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xe60e;"
                                   FontSize="25"
                                   FontFamily="/#iconfont"
                                   VerticalAlignment="Center" />
                        <TextBlock Text="Apps"
                                   VerticalAlignment="Center"
                                   Margin="5,0" />
                    </StackPanel>
                </RadioButton>
                <RadioButton Style="{StaticResource DefaultRadioStyle}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xe60d;"
                                   FontSize="25"
                                   FontFamily="/#iconfont"
                                   VerticalAlignment="Center" />
                        <TextBlock Text="Pages"
                                   VerticalAlignment="Center"
