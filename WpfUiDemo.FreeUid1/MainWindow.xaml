                    </StackPanel>
                </RadioButton>
                <RadioButton Style="{StaticResource DefaultRadioStyle}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xe6ba;"
                                   FontSize="25"
                                   FontFamily="/#iconfont"
                                   VerticalAlignment="Center" />
                        <TextBlock Text="Ui Kit"
                                   VerticalAlignment="Center"
                                   Margin="5,0" />
                    </StackPanel>
                </RadioButton>
                <RadioButton Style="{StaticResource DefaultRadioStyle}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xe7e8;"
                                   FontSize="25"
                                   FontFamily="/#iconfont"
                                   VerticalAlignment="Center" />
                        <TextBlock Text="Form"
                                   VerticalAlignment="Center"
                                   Margin="5,0" />
                    </StackPanel>
                </RadioButton>
            </UniformGrid>
        </Grid>
